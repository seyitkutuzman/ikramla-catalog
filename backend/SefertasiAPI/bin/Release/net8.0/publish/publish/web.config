<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- CORS için HTTP Response Headers -->
    <httpProtocol>
      <customHeaders>
        <clear />
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS, PATCH" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, Accept, Origin, X-Requested-With" />
        <add name="Access-Control-Max-Age" value="86400" />
      </customHeaders>
    </httpProtocol>
    
    <!-- ASP.NET Core Module -->
    <aspNetCore processPath="dotnet" 
                arguments=".\SefertasiAPI.dll" 
                stdoutLogEnabled="true" 
                stdoutLogFile=".\logs\stdout" 
                hostingModel="InProcess">
      <environmentVariables>
        <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
      </environmentVariables>
    </aspNetCore>
    
    <!-- Handlers -->
    <handlers>
      <remove name="WebDAV" />
      <remove name="WebDAVModule" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      
      <!-- OPTIONS için StaticFile handler -->
      <add name="OPTIONSHandler" path="*" verb="OPTIONS" modules="StaticFileModule" resourceType="Unspecified" requireAccess="None" />
      
      <!-- ASP.NET Core handler -->
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
    </handlers>
    
    <!-- Modules -->
    <modules runAllManagedModulesForAllRequests="true">
      <remove name="WebDAVModule" />
      <remove name="FormsAuthentication" />
    </modules>
    
    <!-- Security -->
    <security>
      <requestFiltering>
        <verbs allowUnlisted="true">
          <add verb="GET" allowed="true" />
          <add verb="POST" allowed="true" />
          <add verb="PUT" allowed="true" />
          <add verb="DELETE" allowed="true" />
          <add verb="OPTIONS" allowed="true" />
          <add verb="PATCH" allowed="true" />
        </verbs>
        <requestLimits maxAllowedContentLength="52428800" />
      </requestFiltering>
    </security>
    
    <!-- Static content -->
    <staticContent>
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
    
  </system.webServer>
</configuration>  